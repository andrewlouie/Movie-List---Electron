{
  "name": "moviez",
  "version": "1.1.0",
  "description": "Movie application",
  "main": "main.js",
  "license": "MIT",
  "author": "Andrew Aaron <andrew_louie@hotmail.com>",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build",
    "electron": "electron ."
  },
  "build": {
    "appId": "Moviez",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "./movie.ico"
    }
  },
  "devDependencies": {
    "electron": "^1.8.8",
    "electron-builder": "^19.56.2",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0"
  },
  "dependencies": {
    "electron-settings": "^3.2.0"
  }
}
