{
  "name": "moviez",
  "version": "2.0.0",
  "description": "Movie application",
  "main": "main.js",
  "license": "MIT",
  "author": "Andrew Aaron <andrew_louie@hotmail.com>",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "install-app-deps",
    "electron": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --c.extraMetadata.main=main.js "
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "appId": "Moviez",
    "mac": {
      "target": "pkg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "./movie.ico"
    }
  },
  "devDependencies": {
    "@igloosoftware/eslint-config-igloo": "^2.3.2",
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "2.18.2",
    "react-scripts": "5.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "electron-store": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.4",
    "web-vitals": "^2.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
